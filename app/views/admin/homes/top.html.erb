
<div class="container mt-5">
  <h3>注文履歴一覧</h3>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <!--合計の数量(total_amount)を取得する為記述-->
      <% total_amount= 0 %>
      <% order.order_details.each do |order_detail| %>
        <% total_amount = total_amount + order_detail.amount %>
      <% end %>
      <tr>
        <td><%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M") %>
            <% end %>
        </td>
        <td><%= order.customer.last_name %></td>
        <td><%= total_amount %></td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>
</div>