
<div class="container">
  
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.customer.last_name %></td>
        <td><%= order.order_details.amount %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'リンク', admin_order_path(order.id) %></td>
      </tr>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>
</div>