<main>
  <div class="container">
    <div class="pt-5">
      <h3><span style="background-color:#dcdcdc"><%= @customer.last_name %><%= @customer.first_name %>の会員情報編集</span></h3>
      <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
      <table class="table">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td> <%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :id_deleted, :false %>
            <%= f.label :id_deleted, '有効', {value: :false} %>
            <%= f.radio_button :id_deleted, :true %>
            <%= f.label :id_deleted, '退会', {value: :true} %>
          </td>
        </tr>
      </table>
      <%= f.submit "変更を保存",  class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</main>