<main>
  <div class="container">
    <h3><span style="background-color:#dcdcdc">ジャンル編集</span></h3>
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit "変更を保存",class: "btn btn-success" %>
     <% end %>
  </div>
</main>
