<h3>注文履歴詳細</h3>
<div class="container">
  <table class="table">
    <tbody>
      <div class="row">
        <tr>
          <td>購入者</td>
          <td><%= @order.user.name %></td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <td>注文日</td>
          <td></td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <td>配送先</td>
          <td><%= @order.address %></td>
        </tr>
      </div>
      <div class="row">
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method %></td>        
        </tr>
      </div>
      <div class="row">
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_with model: @order_status do |f| %>
              <%= f.select :status, [["入金待ち", "0"], ["入金確認", "1"], ["制作中", "2"], ["発送準備中", "3"], ["発送済み", "4"]] %>
              <td>
              <%= f.submit "更新" %>
              </td>
            <% end %>
          </td>
        </tr>
      </div>
    </tbody>
  </table>
  <!--order_detailsで部分テンプレート作成します-->
  <%#= render 'order_details/details' %>

</div>