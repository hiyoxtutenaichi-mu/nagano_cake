

<div class="container">
   <div class="row ">
      <div class="col-5 offset-3">
        <h2 class="heading08"><span>新規会員登録</span></h2>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :"名前（姓）", class: "under" %><br />
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
    
            <div class="field">
              <%= f.label :"名前（名）", class: "under" %><br />
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
    
            <div class="field">
              <%= f.label :"フリガナ（姓）", class: "under"  %><br />
              <%= f.text_field :last_name_kana, class: "form-control"%>
            </div>
    
            <div class="field">
              <%= f.label :"フリガナ（名）", class: "under"   %><br />
              <%= f.text_field :first_name_kana, class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :"メールアドレス", class: "under"  %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :"郵便番号（ハイフンなし）", class: "under"  %><br />
              <%= f.text_field :postal_code,class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :"住所", class: "under"  %><br />
              <%= f.text_field :address,class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :"電話番号（ハイフンなし）", class: "under"  %><br />
              <%= f.text_field :telephone_number,class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :"パスワード（6文字以上）", class: "under" %>
              <% if @minimum_password_length %>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control"%>
            </div>
    
            <div class="field">
              <%= f.label :"パスワード（確認用）", class: "under" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control"  %>
            </div>
    
            <div class="form">
               <input type="submit" class="reset flat border2" value="新規登録">
            </div>
          <% end %>
    
          <h4>既に会員登録済みの方</h4>
          <%= render "public/shared/links" %>
    </div>
  </div>
</div>