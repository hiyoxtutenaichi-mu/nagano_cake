<div class="container">
  <div class="row my-3">
    <h3><span style="background-color:#dcdcdc">商品一覧(全<%= @items.count %>件)</span></h3>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-5 sm-mr-1 col-md-4 md-mr-2 col-lg-3 lg-mr-1">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', fallback: 'no_image.jpg', size:'200x130'%>
          <p><%= item.name %><br>
            ¥<%= item.add_tax_price.to_s(:delimited) %></p>
        <% end %>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>