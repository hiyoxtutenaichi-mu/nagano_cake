<div class="container">
  <div class="row">
    <div class="col">
      <h1>注文情報確認</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image,format: 'jpg', size:'60x40' %>
                  <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= ((cart_item.item.price * 1.1 * cart_item.amount).to_s(:delimited)) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <table class="table">
        <tbody>
          <tr>
            <th><strong>支払い方法</strong></th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr><strong>お届け先</strong></tr>
          <td>
            〒<%= @order.postal_code %><%= @order.address %><br>
              <%= @order.name %>
          </td>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col">
        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :name, :value => "#{@order.name}" %>
        <%= f.hidden_field :address, :value => "#{@order.address}" %>
        <%= f.hidden_field :postal_code, :value => "#{@order.postal_code}" %>
        <%= f.hidden_field :shipping_cost, :value => @ship_cost %>
        <%= f.hidden_field :total_payment, :value => @total_payment %>
        <%= f.submit '注文を確定する', class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>