<div class="container mt-md-5">
  <h3><span style="background-color:#dcdcdc">注文履歴詳細</span></h3>
  <div class="row">
    <div class="col-md-6">
      <h5>注文情報</h5>
      <table class="table">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y%m%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <p>〒<%= @order.postal_code %>
            <br><%= @order.address %>
            <br><%= @order.name %>
            </p>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
    <div class="col-6">
      <h5>請求情報</h5>
      <table class="table">
        <tr>
          <th>商品合計</th>
          <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <div class="row mx-2 mt-4">
      <div class="col">
        <h5>注文内容</h5>
        <table class="table">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= (order_detail.item.price * 1.1).to_s(:delimited) %></td>
                <td><%= order_detail.amount %></td>
                <td><%= ((order_detail.item.price * 1.1) * order_detail.amount).to_s(:delimited) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>