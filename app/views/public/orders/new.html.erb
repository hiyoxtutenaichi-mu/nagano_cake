<div class="container">
  <div class="row">
    <div class="col">
      <h3>注文情報入力</h3>
      <%= form_with(model: @order, url: 'orders/comfirm', method: :post, local: true)do |f| %>
        <table>
          <tbody>
            <tr>
              <th scope="row">支払い方法</th>
              <td>
                <div class="radio">
                  <%= f.select :payment_methods, Order.payment_methods_i18n.invert, {prompt: false} %>
                </div>
              </td>
            </tr>
            <tr>
              <th scope="row">お届け先</th>
              <td>
                <div class="radio mt-5">
                  <%= radio_button_tag(:selected_address, :radio1) %>
                  <%= label_tag(:selected_address, "ご自身の住所") %>
                  <p><%= @customer.postal_code %><%= @customer.address %></p>
                  <p><%= @customer.last_name %><%= @customer.first_name %></p>
                </div>
                  <%= radio_button_tag(:selected_address, :radio3) %>
                  <%= label_tag(:selected_address, "新しいお届け先") %>
                    <div class="field">
                      <label class="address-label">郵便番号</label>
                      <%= f.text_field :postal_code, autofocus: true %>
                    </div>
                    <div class="field">
                      <label class="address-label">住所</label>
                      <%= f.text_field :address, autofocus: true %>
                    </div>
                    <div class="field">
                      <label class="address-label">宛名</label>
                      <%= f.text_field :name, autofocus: true %>
                    </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-xs-offset-5">
          <%= f.submit "確認画面へ進む",class:"btn btn-primary col-xs-3 " %>
        </div>
      <% end %>
    </div>
  </div>
</div>