<div class="container">
   <div class="row hoge">
       <h1 class="heading08"><span>Address</span>配送先一覧</h1>
   </div>
   <div class="row hoge">
       <div class="col-6">
          <%= render partial: 'layouts/flash' %>
        <%= form_with model:@address,local:true do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
              <div class="form-group">
                <%= f.label :"郵便番号(ハイフンなし)"%>
                <%= f.text_field :postal_code, class: 'form-control', placeholder: "0000000" %>
              </div>
              <div class="form-group">
                <%= f.label :住所 %>
                <%= f.text_area :address, class: 'form-control', placeholder: "東京都渋谷区代々木10-10" %>
              </div>
              <div class="form-group">
                <%= f.label :宛名 %>
                <%= f.text_field :name, class: 'form-control', placeholder: "代々木太郎" %>
              </div>
              <div class="form-group">
                <%= f.submit "新規登録",class: 'btn btn-success' %>
              </div>
        <% end %>
       </div>
    </div>
    <div class="row hoge">
        <div calss="col-10">
        <% if @addresses.empty? %>
         <h4>追加された配送先はありません</h4>
        <% else %>
         <table border="1" class="table">
           <thead class="table-primary">
             <tr>
               <th>郵便番号</th>
               <th>住所</th>
               <th>宛名</th>
               <th></th>
             </tr>
           </thead>
           <tbody>
             <% @addresses.each do |address| %>
             <tr>
               <td><%= address.postal_code %></td>
               <td><%= address.address %></td>
               <td><%= address.name %></td>
               <td>
                <%= link_to '編集する', address_edit_path(address), class: "btn btn-sm btn-success edit_send_address_#{@address.id}" %>
                <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_send_address_#{@address.id}"%>
               </td>
             </tr>
             <% end %>
           </tbody>
         </table>
     <% end %>
      </div>
    </div>
 </div>