<div class="m-5">
 <div class="m-5">
   <h4><span style="background-color:#ececec">　配送先編集　</span></h4>
 </div>
  <%= form_with model:@address,local:true do |f| %>
  <div class="form-group">
    <%= f.label :"郵便番号(ハイフンなし)"%>
    <%= f.text_field :postal_code, class: 'form-control', placeholder: "0000000" %>
  </div>
  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_area :address, class: 'form-control', placeholder: "東京都渋谷区代々木10-10" %>
  </div>
  <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name, class: 'form-control', placeholder: "代々木太郎" %>
  </div>
  <div class="form-group">
    <%= f.submit "変更内容を保存",class: 'btn btn-success' %>
  </div>
  <% end %>
 </div>