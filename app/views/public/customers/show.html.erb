<div class="container">
 <div class="row-4 text-center">
 <h5 class="d-table my-5" style="background-color: #e6e3de;">　マイページ　</h5>
 </div>
 <div class="d-flex col-10 offset-1">
  <h4>登録情報</h4>
  <div class="ml-auto"><%= link_to "編集する", edit_customer_path, class: "btn btn-outline-success" %></div>
 </div>
 <table class="table table-bordered col-10 offset-1">
 　<tr><td class="bg-light">氏名</td><td><%= @customer.last_name %>　<%= (@customer.first_name) %></td></tr>
 　<tr><td class="bg-light">カナ</td><td><%= (@customer.last_name_kana) %>　<%= (@customer.first_name_kana) %></td></tr>
 　<tr><td class="bg-light">郵便番号</td><td><%= @customer.postal_code %></td></tr>
 　<tr><td class="bg-light">住所</td><td><%= @customer.address %></td></tr>
 　<tr><td class="bg-light">電話番号</td><td><%= @customer.telephone_number %></td></tr>
 　<tr><td class="bg-light">メールアドレス</td><td><%= @customer.email %></td></tr>

 </table>

 <table class="table table-borderless offset-1" style="width: 250px;">
  <tr>
    <td>
     <section>
      <%= link_to "配送先一覧", addresses_path, class: "btn-1" %>
     </section>
    </td>
  </tr>
  <tr><td><section><%= link_to "注文履歴一覧", orders_path, class: "btn-1" %></section></td></tr>
</table>
</div>
</div>