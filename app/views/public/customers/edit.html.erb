<div class="container-md">
<div class="ml-5">
<h4 class="mt-4">会員情報編集画面</h4>
<%= form_with model: @customer, url: customer_path, local: true do |f| %>

<table class = "table table-borderless">
 <tr><th></th><th></th></tr>
 <tr><td>氏名</td><td><%= f.text_field :last_name, autofocus: true, placeholder: "名字" %><%= f.text_field :first_name, placeholder: "名前" %></td></tr>
 <tr><td>フリガナ</td><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td></tr>
 <tr><td>郵便番号</td><td><%= f.text_field :postal_code %></td></tr>
 <tr><td>住所</td><td><%= f.text_field :address %></td></tr>
 <tr><td>電話番号</td><td><%= f.text_field :telephone_number %></td></tr>
 <tr><td>メールアドレス</td><td><%= f.text_field :email %></td></tr>
</table>

<div class="mb-4"><%= f.submit "編集内容を保存" %></div>
<div><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %></div>
<% end %>
</div>
</div>